---
export interface Props {
  title: string;
  excerpt: string;
  image: string;
  category: string;
  categorySlug: string;
  date: string;
  url: string;
}

const { title, excerpt, image, category, categorySlug, date, url } = Astro.props;
---

<article class="bg-white rounded-xl overflow-hidden shadow-lg mb-8">
  <div class="md:flex">
    <div class="md:w-2/3 relative">
      <a href={url} class="block">
        <img 
          src={image} 
          alt={title} 
          class="w-full h-64 md:h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
        <div class="absolute bottom-0 left-0 p-6 text-white">
          <span class="bg-primary text-white text-xs font-semibold px-2 py-1 rounded mb-3 inline-block">
            {category}
          </span>
          <h2 class="text-2xl md:text-3xl font-bold mb-2 line-clamp-2">{title}</h2>
          <p class="text-gray-200 mb-3 line-clamp-2 md:line-clamp-3">{excerpt}</p>
          <div class="flex justify-between items-center">
            <span class="text-sm">{date}</span>
            <span class="font-medium">Leer más</span>
          </div>
        </div>
      </a>
    </div>
    <div class="md:w-1/3 p-6 md:p-8 flex flex-col justify-center">
      <span class="bg-primary text-white text-xs font-semibold px-2 py-1 rounded mb-3 inline-block md:hidden">
        {category}
      </span>
      <h2 class="text-xl md:text-2xl font-bold mb-3 md:hidden">{title}</h2>
      <div class="hidden md:block">
        <span class="bg-primary text-white text-xs font-semibold px-2 py-1 rounded mb-3 inline-block">
          {category}
        </span>
        <h2 class="text-xl md:text-2xl font-bold mb-3">{title}</h2>
        <p class="text-gray-600 mb-4 line-clamp-4">{excerpt}</p>
        <div class="flex justify-between items-center text-sm text-gray-500">
          <span>{date}</span>
          <a href={url} class="font-medium text-primary hover:underline">Leer más</a>
        </div>
      </div>
    </div>
  </div>
</article>
